@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>
<h2>@ViewData["TeamName"]</h2>
<br />
<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>First Name</th>
            <th>Middle Init</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Bowler b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerId="@b.BowlerID" class="btn btn-info">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerId="@b.BowlerID" class="btn btn-info">Delete</a></td>
            </tr>
        }


    </tbody>
</table>
<a asp-controller="Home" asp-action="AddBowler" class="btn bg-primary">Add A Bowler</a>